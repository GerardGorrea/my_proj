{% extends 'base.html.twig' %}

{% block title %}Iniciar sessió{% endblock %}

{% block body %}
    <h1>Iniciar sessió</h1>

    {# Si l'usuari ja està autenticat, mostra un missatge de benvinguda #}
    {% if app.user %}
        <div class="alert alert-success">
            Hola, {{ app.user.username }}! Ja estàs autenticat.
        </div>
        <a href="{{ path('home') }}">Torna a l'inici</a>
    {% else %}
        {# Formulari d'inici de sessió gestionat pel sistema de seguretat de Symfony #}
        <form method="post" action="{{ path('app_login') }}">
            {# Mostrar error d'inici de sessió si n'hi ha #}
            {% if error %}
                <div class="error">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <div>
                <label for="username">Email:</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" required autofocus>
            </div>
            <div>
                <label for="password">Contrasenya:</label>
                <input type="password" id="password" name="_password" required>
            </div>

            <button type="submit">Iniciar sessió</button>
        </form>
    {% endif %}
{% endblock %}


