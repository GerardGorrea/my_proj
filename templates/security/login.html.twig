{% extends 'base.html.twig' %}

{% block title %}Iniciar sessió{% endblock %}

{% block body %}
    <h1>Iniciar sessió</h1>

    {# Comprovem si l'usuari està autenticat #}
    {% if app.user %}
        <div class="alert alert-success">
            Hola, {{ app.user.username }}! Ja estàs autenticat.
        </div>
    {% else %}
        {# Si l'usuari no està autenticat, mostrem el formulari #}
        <h5>Usuari</h5>
        {{ form_start(form) }}
            {{ form_widget(form.username) }}
            <h5>Contrassenya</h5>
            {{ form_widget(form.password) }}
            <button type="submit">Iniciar sessió</button>
        {{ form_end(form) }}

        {# Mostrar error d'inici de sessió si n'hi ha #}
        {% if error %}
            <div class="error">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}
    {% endif %}

    {# Afegeix un dump per veure què està passant a la vista #}
    {{ dump(app.user) }}
{% endblock %}
