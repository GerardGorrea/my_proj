{% extends 'base.html.twig' %}

{% block title %}Hello PostController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper .button {
        display: inline-block;
        padding: 10px 15px;
        background-color: #007BFF;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        border: none;
        font-size: 16px;
    }
    .example-wrapper .button:hover {
        background-color: #0056b3;
    }
</style>


<div class="example-wrapper">
    {{ form(form) }}
</div>

<div class="example-wrapper">
    <!-- Botó de Log In estilitzat -->
    <p>App Login path: {{ path('app_login') }}</p>

    <a class="button" href="{{ path('app_login') }}">Log In</a>
    
    <p>- - - - - - - - - - - - - - - - -</p>

    <!-- Botó de Log Out que tanca la sessió -->
    <form method="post" action="{{ path('_logout_main') }}">
        <button type="submit" class="button">Log Out</button>
    </form>
</div>


{% endblock %}
